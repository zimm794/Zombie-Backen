<?xml version="1.0" encoding="UTF-8"?>

<configs>

    <!--blocked_tags="noMods"-->
    
    <!-- Radiation Helmet Mod -->
    <append xpath="/item_modifiers">
        <item_modifier name="modRadiationHelmet" installable_tags="head,armorHead" modifier_tags="resistance" blocked_tags="noMods" type="attachment">
            <property name="Extends" value="modGeneralMaster"/>
            <property name="DescriptionKey" value="modRadiationHelmetDesc"/>
            <property name="CustomIcon" value="apparelPlantFiberHood"/>
            <property name="CustomIconTint" value="0,255,0"/>
            <property name="UnlockedBy" value="craftingArmor"/>
            <effect_group tiered="false">
                <triggered_effect trigger="onSelfEquipStart" action="AddBuff" buff="buffRadiationMask"/>
                <triggered_effect trigger="onSelfEquipStop" action="RemoveBuff" buff="buffRadiationMask"/>
                <triggered_effect trigger="onSelfEquipStop" action="RemoveBuff" target="self" buff="buffRadiationSuit"/>
            </effect_group>
        </item_modifier>
    </append>

